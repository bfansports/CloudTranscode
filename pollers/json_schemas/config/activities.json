{
    "id": "http://sportarchive.tv/input-schema/activities#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Schemas for activities items in activities array of main config file",
    "type": "object",
    "properties": {
	"name": {
	    "description": "Activity name",
	    "type": "string",
	    "minLength": 3,
	    "maxLength": 64
	},
	"version": {
	    "description": "Activity version",
	    "type": "string",
	    "minLength": 1,
	    "maxLength": 32,
	    "pattern": "^[\\w\\.\\- ]+$"
	},
	"description": {
	    "description": "Activity description",
	    "type": "string",
	    "minLength": 1,
	    "maxLength": 256
	},
	"file": {
	    "description": "File implementing this activity",
	    "type": "string",
	    "minLength": 16,
	    "maxLength": 1024,
	    "pattern": "^[\\w\\-\\./]+\\.php+$"
	},
	"class": {
	    "description": "Class name implementing this activity",
	    "type": "string",
	    "minLength": 8,
	    "maxLength": 256,
	    "pattern": "^[\\w\\-]+$"
	}
    },
    "required": ["name", "version", "description", "file", "class", "scheduleToStartTimeout", "scheduleToCloseTimeout", "startToCloseTimeout", "heartbeatTimeout"],
    "additionalProperties": false
}
