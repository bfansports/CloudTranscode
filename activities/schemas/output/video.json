{
    "id": "http://sport-archive.com/input-schema/output/video",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "CT transcode output specification",
    "type": "object",
    "properties": {
	    "type": {
	        "type": "string",
            "enum": [ "VIDEO" ],
            "description": "Type MUST be 'VIDEO'"
	    },
        "format": {
	        "type": "string",
            "enum": [ "mp4", "avi", "mov", "3gp", "3gpp" ],
            "description": "Provide the type of output file you need your document transcoded to"
        },
        
        "preset": {
	        "type": "string",
            "description": "Preset to use to transcode the file"
        },
        "size": {
	        "type": "string",
            "description": "original video/picture size"
        },
        "video_codec": {
	        "type": "string",
            "description": "Override the video codec used by codec"
        },
        "audio_codec": {
	        "type": "string",
            "description": "Override the audio codec used by preset"
        },
        "video_bitrate": {
	        "type": "string",
            "description": "Override default preset bitrate for video"
        },
        "audio_bitrate": {
	        "type": "string",
            "description": "Override default preset bitrate for audio"
        },
        "frame_rate": {
	        "type": "string",
            "description": "Override default preset frame rate"
        },
        "watermark": {
	        "type": "boolean",
            "description": "Provide watermark information if any"
        },
        "thumbnail": {
	        "$ref": "#/definitions/thumbnail",
            "description": "Provide thumbnails information is needed"
        }
    },
    "required": ["type", "output_bucket", "file", "preset"],
    "additionalProperties": false,
    
    "definitions": {
        "thumbnail": {
            "type": "object",
            "properties": {
                "mode": {
                    "type": "string",
                    "enum": ["snapshot", "interval"],
                    "description": "Type of thumbnails generation needed"
                },
                "label": {
        	        "type": "string",
                    "description": "file label to use for your thumbnails. We will append sequence number"
                },
                "output_bucket": {
        	        "type": "string",
                    "description": "S3 bucket and path where the output file will be uploaded"
                },
                "interval": {
                    "type": "integer",
                    "minValue": 0,
                    "description": "Override default interval in seconds"
                },
                "s3_rrs": {
        	        "type": "boolean",
                    "description": "Activate reduced redundancy or not in S3 storage"
                },
                "s3_encrypt": {
        	        "type": "boolean",
                    "description": "Activate backend storage encryption"
                },
                "size": {
                    "type": "string",
                    "description": "Size of the thumbnails"
                }
            },
            "required": ["output_bucket", "label", "size"],
            "additionalProperties": false
        },
        "watermark": {
            "input_butcket": {
                "type": "string",
                "description": "Bucket name and path where the watermark is located"
            },
            "input_file": {
                "type": "string",
                "description": "Filename of the file containing the watermark"
            },
            "size": {
                "type": "string",
                "description": "Size of the watermark in the video result"
            }, 
            "opacity": {
                "type": "float",
                "description": "Change the default watermark opacity"
            },
            "x": {
                "type": "integer",
                "description": "Change the watermark position. In pixels"
            },
            "y": {
                "type": "integer",
                "description": "Change the watermark position. In pixels"
            },
            "required": ["input_bucket", "input_file"],
            "additionalProperties": false
        }
    }
}
