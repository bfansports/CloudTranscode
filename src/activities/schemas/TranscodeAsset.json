{
    "id": "http://sport-archive.com/input-schema#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Schema for TranscodeAsset activity task",
    "type": "object",
    "properties": {
        "input_json": {
            "description": "Original JSON input submitted to the Workflow",
            "type": "object"
        },
        "input_asset_type": {
            "description": "Type of the input asset",
            "type": "string",
	    "enum": [ "VIDEO", "AUDIO", "IMG", "DOC" ]
        },
        "input_asset_info": {
            "description": "Information about the input file to transcode",
            "type": "object",
            "properties": {
                "duration": { "type": "number" },
                "vcodec": { "type": "string" },
                "color": { "type": "string" },
                "size": { "type": "string" },
                "vbitrate": { "type": "string" },
                "fps": { "type": "string" },
                "ratio": { "type": "string" },
                "acodec": { "type": "string" },
                "freq": { "type": "string" },
                "mode": { "type": "string" },
                "abitrate": { "type": "string" }
            }
        },
        "output": {
            "$ref": "output/base.json",
            "oneOf": [                    
                { "$ref": "output/video.json" },
		{ "$ref": "output/thumb.json" }
            ]
        }
    },
    "required": ["output", "input_asset_type", "input_asset_info", "input_json"],
    "additionalProperties": true
}
